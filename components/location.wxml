<!--pages/components/map.wxml-->
<view class='content bg-fff mar-b-31 bor-tb-1 pad-b-30'>
  <view class='lin-h-50 font-36 pad-tb-32'>
    <text class='gang bg-red'></text>上课地点
  </view>
  <view class='flex v-center' bindtap='showlocation'>
    <image src='/images/location.png' mode='widthFix' class='icon'></image>
    <text class='font-30'>{{datas.location}}</text>
  </view>
  <view class='flex v-center' bindtap='call'>
    <image src='/images/phone.png' mode='widthFix' class='icon'></image>
    <text class='font-30'>{{datas.phone}}</text>
  </view>
</view>
